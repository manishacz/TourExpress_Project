<%layout("/layouts/boilerplate")%> 
<body class="body-bl">
   <div class="row mt-3">
    <h2 class="col-6 offset-3" >SignUp on Wanderlust</h2>
     <div class="col-5 offset-3">
       <form action ="/signup" method="POST" class="needs-validation" , novalidate>
        <!-- username -->
         <div class="mb-3">
           <lable for="username" class="form-label">Username</lable>
           <input type="text" name="username" id="username" class="form-control" required>
          </div>
         <div class="valid-feedback">
            Looks good!
         </div>
        <!-- email -->
         <div class="mb-3">
            <lable for="email" class="form-label">Email</lable>
            <input type="email" name="email" id="emailID" class="form-control" required>
         </div>
            <div class="invalid-feedback">
                Please enter email id.
            </div>
       <!-- password -->
          <div class="mb-3">
            <lable for="password" class="form-label">Password</lable>
            <input type="password" name="password" id="password" class="form-control" required>
          </div>
          <div class="invalid-feedback">
            please enter password.
          </div>
         <button type="submit" class="btn btn-dark add-btn">SignUp</button>       
        
        </form>
    </div>
   </div> 
</body>